<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.games.GamesFragment">

    <!-- Contenedor vertical para las filas de CardViews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Primera fila de CardViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Card para minijuego 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_game_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C9C9C9"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/btn_game_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/circle_button"
                        android:contentDescription="@string/game_1"
                        android:src="@drawable/tank_icon" />

                    <TextView
                        android:id="@+id/tv_game_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"
                        android:text="@string/game_1"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card para minijuego 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_game_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C9C9C9"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/btn_game_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/circle_button"
                        android:contentDescription="@string/game_2"
                        android:src="@drawable/catch_icon" />

                    <TextView
                        android:id="@+id/tv_game_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"
                        android:text="@string/game_2"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Segunda fila de CardViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Card para minijuego 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_game_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C9C9C9"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/btn_game_3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/circle_button"
                        android:contentDescription="@string/game_3"
                        android:src="@drawable/pick_icon" /> <!-- Asegúrate de tener este icono -->

                    <TextView
                        android:id="@+id/tv_game_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"
                        android:text="@string/game_3"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card para minijuego 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_game_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C9C9C9"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/btn_game_4"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/circle_button"
                        android:contentDescription="@string/game_4"
                        android:src="@drawable/snake_icon" /> <!-- Asegúrate de tener este icono -->

                    <TextView
                        android:id="@+id/tv_game_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"
                        android:text="@string/game_4"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/my_image_view"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/image_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/basurero_presentador" /> <!-- Centrar la imagen -->

</LinearLayout>
