<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ejercicios.ManualSumActivity">

    <EditText
        android:id="@+id/editTextNumberA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número A"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextNumberB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número B"
        android:inputType="number" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resolver" />

    <TextView
        android:id="@+id/detailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adiciones"
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/numATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número A"
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/numBTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número B"
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textSize="18sp"
        android:paddingTop="16dp" />
</LinearLayout>
